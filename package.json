{
  "name": "notes-calendar",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Narciso Daniel Correia",
  "license": "MIT",
  "scripts": {
    "start": "run-p start:react start:electron",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "electron .",
    "build": "run-s clean:build build:react build:pack",
    "build:react": "react-scripts build",
    "build:pack": "electron-builder --win=portable",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rm -rf node_modules && npm run clean:build",
    "clean:build": "rm -rf build && rm -rf dist"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "productName": "Notes Calendar",
    "appId": "com.ndc.notes-calendar",
    "icon": "src/icon.ico"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "npm-run-all": "^4.1.5",
    "react-draft-wysiwyg": "^1.14.5"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "draft-js": "^0.11.7",
    "electron-is-dev": "^1.2.0",
    "firebase": "^8.2.5",
    "react": "^16.13.1",
    "react-calendar": "^3.1.0",
    "react-dom": "^16.13.1",
    "react-scripts": "^4.0.1",
    "styled-components": "^5.1.1"
  }
}
